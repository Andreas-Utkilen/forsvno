<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Faktaboks med bilde</display-name>
    <form>
        <input name="title" type="TextLine">
            <label>Tittel</label>
            <occurrences minimum="1" maximum="1"/>
        </input>
        <input name="text" type="HtmlArea" >
            <!-- @description[no]: Tekst  -->
            <!-- @description[en]: Text -->
            <label i18n="text">Text</label>
            <config>
                <exclude>Code | Table | Image</exclude>
                <allowHeadings>h4 | h5</allowHeadings>
            </config>
        </input>
        <input name="image" type="ImageSelector">
            <label>Bilde</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <allowPath>${site}/*</allowPath>
                <treeMode>true</treeMode>
                <showStatus>true</showStatus>
            </config>
        </input>
        <input name="side" type="RadioButton">
            <label>Bildeposisjon</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <option value="left">Venstre</option>
                <option value="right">HÃ¸yre</option>
            </config>
            <default>left</default>
        </input>
        <mixin name="background-color"/>
    </form>
</part>
