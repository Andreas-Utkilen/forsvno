<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Promokort - Horisontal</display-name>
    <form>
        <input name="title" type="TextLine">
            <label>Tittel</label>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <max-length>30</max-length>
            </config>
        </input>
        <item-set name="items">
            <label>Promokort</label>
            <items>
                <input name="title" type="TextLine">
                    <label>Tittel</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <max-length>8</max-length>
                    </config>
                </input>
                <input name="text" type="TextArea">
                    <label>Tekst</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <item-set name="decoration">
                    <label>Dekorasjon</label>
                    <items>
                        <input name="icon" type="ImageSelector">
                            <label>Ikon</label>
                            <occurrences minimum="1" maximum="1"/>
                            <config>
                                <allowPath>${site}/*</allowPath>
                                <treeMode>true</treeMode>
                                <showStatus>true</showStatus>
                                <hideToggleIcon>true</hideToggleIcon>
                            </config>
                        </input>
                        <input name="caption" type="TextLine">
                            <label>Ikon tekst</label>
                            <occurrences minimum="1" maximum="1"/>
                        </input>
                    </items>
                    <occurrences minimum="0" maximum="1" />
                </item-set>
            </items>
            <occurrences minimum="3" maximum="12"/>
        </item-set>
    </form>
</part>
