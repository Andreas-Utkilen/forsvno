<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Scrollbar - infografikk</display-name>
    <form>
        <item-set name="data">
            <!-- @description[no]: Steg  -->
            <!-- @description[en]: Step -->
            <label i18n="stepper.step">Steg</label>
            <items>
                <input name="text" type="TextLine">
                    <!-- @description[no]: Tekst  -->
                    <!-- @description[en]: Text -->
                    <label i18n="text">Tekst</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <max-length>30</max-length>
                    </config>
                </input>
                <input  name="active" type="CheckBox">
                    <!-- @description[no]: Aktiv  -->
                    <!-- @description[en]: Active -->
                    <label i18n="stepper.active">Aktiv</label>
                    <config>
                        <alignment>left</alignment>
                    </config>
                </input>
                <item-set name="link">
                    <!-- @description[no]: Lenke  -->
                    <!-- @description[en]: Lenke -->
                    <label i18n="stepper.link">Lenke</label>
                    <items>
                        <input type="TextLine" name="href">
                            <!-- @description[no]: Skriv en full ekstern URL som skal lenkes til. -->
                            <!-- @description[en]: Write a full external URL to link to. -->
                            <label i18n="link.url">Type URL (with http/https attached)</label>
                            <occurrences minimum="1" maximum="1" />
                        </input>
                        <input name="newTab" type="CheckBox">
                            <!-- @description[no]: Kryss av hvis lenken skal Ã¥pnes i ny tab. -->
                            <!-- @description[en]: Check if link should be opened i new tab. -->
                            <label i18n="link.tab">Open in new tab</label>
                            <default>checked</default>
                            <config>
                                <alignment>right</alignment>
                            </config>
                        </input>
                    </items>
                    <occurrences minimum="0" maximum="1"/>
                </item-set>
            </items>
            <occurrences minimum="2" maximum="6"/>
        </item-set>
    </form>
</part>
