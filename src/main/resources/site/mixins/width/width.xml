<mixin>
    <display-name>Bredde mixin</display-name>
    <form>
        <input name="cols" type="ComboBox">
            <!-- @description[no]: Bredde -->
            <!-- @description[en]: Width -->
            <label i18n="form.width">Bredde</label>
            <config>
                <option value="12">Full bredde</option>
                <option value="8">2/3 bredde</option>
                <option value="6">Halv bredde</option>
                <option value="4">1/3 bredde</option>
                <option value="3">1/4 bredde</option>
            </config>
            <default>12</default>
            <occurrences minimum="1" maximum="1"/>
        </input>
    </form>
</mixin>
